{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "baseUrl": "src",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}
